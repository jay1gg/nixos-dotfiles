root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.nix]
indent_style = space
indent_size = 2

[*.{json,jsonc,yaml,yml,toml}]
indent_style = space
indent_size = 2

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
